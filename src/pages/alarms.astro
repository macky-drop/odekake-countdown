---
import Layout from '../layouts/Layout.astro';
---

<Layout title="„Ç¢„É©„Éº„É†Ë®≠ÂÆö - „Åä„Åß„Åã„Åë„Ç´„Ç¶„É≥„Éà„ÉÄ„Ç¶„É≥" activeTab="alarms">
  <div class="alarms-container">
    <h1 class="page-title">„Ç¢„É©„Éº„É†Ë®≠ÂÆö</h1>

    <!-- „ÅäÊ∞ó„Å´ÂÖ•„Çä„É™„Çπ„Éà -->
    <div class="card">
      <h2 class="section-title">„ÅäÊ∞ó„Å´ÂÖ•„Çä</h2>
      <div id="favorites-list" class="favorites-list">
        <p class="empty-message">ÁôªÈå≤„Åï„Çå„Åü„Éë„Çø„Éº„É≥„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</p>
      </div>
    </div>

    <!-- Êñ∞Ë¶è‰ΩúÊàê„Éú„Çø„É≥ -->
    <button class="btn btn-primary btn-full" id="new-alarm-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="12" y1="5" x2="12" y2="19"></line>
        <line x1="5" y1="12" x2="19" y2="12"></line>
      </svg>
      Êñ∞Ë¶è‰ΩúÊàê
    </button>

    <!-- „Ç¢„É©„Éº„É†„Éï„Ç©„Éº„É†„É¢„Éº„ÉÄ„É´ -->
    <div id="alarm-modal" class="modal" style="display: none;">
      <div class="modal-content">
        <div class="modal-header">
          <h2 id="modal-title">Êñ∞Ë¶è„Ç¢„É©„Éº„É†</h2>
          <button class="close-btn" id="close-modal">√ó</button>
        </div>

        <form id="alarm-form" class="alarm-form">
          <input type="hidden" id="edit-id" />

          <div class="form-group">
            <label for="label">„É©„Éô„É´</label>
            <input type="text" id="label" placeholder="‰æã: Âá∫Âã§„Éë„Çø„Éº„É≥" required />
          </div>

          <div class="form-group">
            <label for="wake-time">„ÇÅ„Åñ„Åæ„ÅóÊôÇÂàª</label>
            <div class="time-input-wrapper">
              <input type="time" id="wake-time" />
              <label class="checkbox-item">
                <input type="checkbox" id="wake-time-off" />
                <span>OFF</span>
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="departure-time">„Åä„Åß„Åã„ÅëÊôÇÂàª</label>
            <input type="time" id="departure-time" required />
          </div>

          <div class="form-group">
            <label>„Ç´„Ç¶„É≥„Éà„ÉÄ„Ç¶„É≥ÈÄöÁü•ÈñìÈöî</label>
            <div class="checkbox-grid" id="intervals-grid"></div>
          </div>

          <div class="form-group">
            <label>Áπ∞„ÇäËøî„Åó</label>
            <div class="weekday-buttons" id="weekday-buttons"></div>
          </div>

          <div class="error-message" id="error-message" style="display: none;"></div>

          <div class="form-actions">
            <button type="button" class="btn btn-secondary" id="cancel-btn">„Ç≠„É£„É≥„Çª„É´</button>
            <button type="submit" class="btn btn-primary">‰øùÂ≠ò</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
    .alarms-container {
      max-width: 600px;
      margin: 0 auto;
    }

    .page-title {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: var(--color-text);
    }

    .section-title {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .favorites-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .empty-message {
      text-align: center;
      color: var(--color-text-secondary);
      padding: 2rem 0;
    }

    .favorite-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem;
      background: var(--color-background);
      border-radius: 8px;
      transition: background 0.2s;
      font-size: 0.875rem;
    }

    .favorite-item:hover {
      background: #e2e8f0;
    }

    .toggle-switch {
      position: relative;
      width: 44px;
      height: 24px;
      flex-shrink: 0;
    }

    .toggle-switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .toggle-slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: #cbd5e1;
      border-radius: 24px;
      transition: 0.3s;
    }

    .toggle-slider:before {
      position: absolute;
      content: "";
      height: 18px;
      width: 18px;
      left: 3px;
      bottom: 3px;
      background: white;
      border-radius: 50%;
      transition: 0.3s;
    }

    .toggle-switch input:checked + .toggle-slider {
      background: var(--color-primary);
    }

    .toggle-switch input:checked + .toggle-slider:before {
      transform: translateX(20px);
    }

    .favorite-label {
      font-weight: 600;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      flex: 1;
      min-width: 60px;
    }

    .favorite-time {
      color: var(--color-text-secondary);
      font-size: 0.8rem;
      white-space: nowrap;
      flex-shrink: 0;
    }

    .icon-btn {
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.4rem;
      color: var(--color-text-secondary);
      transition: color 0.2s;
      flex-shrink: 0;
    }

    .icon-btn:hover {
      color: var(--color-text);
    }

    .icon-btn.delete:hover {
      color: var(--color-error);
    }

    .btn-full {
      width: 100%;
      margin-top: 1rem;
    }

    /* „É¢„Éº„ÉÄ„É´ */
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 1rem;
    }

    .modal-content {
      background: var(--color-surface);
      border-radius: 12px;
      max-width: 500px;
      width: 100%;
      max-height: 90vh;
      overflow-y: auto;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem;
      border-bottom: 1px solid var(--color-border);
    }

    .modal-header h2 {
      font-size: 1.25rem;
      font-weight: 600;
    }

    .close-btn {
      background: none;
      border: none;
      font-size: 2rem;
      cursor: pointer;
      color: var(--color-text-secondary);
      line-height: 1;
      padding: 0;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .alarm-form {
      padding: 1.5rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .time-input-wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .time-input-wrapper input[type="time"] {
      flex: 1;
    }

    .checkbox-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
    }

    .checkbox-item input[type="checkbox"] {
      width: auto;
      cursor: pointer;
    }

    .weekday-buttons {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .weekday-btn {
      padding: 0.5rem 0.75rem;
      border: 2px solid var(--color-border);
      background: var(--color-surface);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s;
      font-weight: 500;
      font-size: 0.875rem;
      min-width: 40px;
      text-align: center;
    }

    .weekday-btn.active {
      background: var(--color-primary);
      border-color: var(--color-primary);
      color: white;
    }

    .error-message {
      background: #fee;
      color: var(--color-error);
      padding: 0.75rem;
      border-radius: 6px;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    .form-actions .btn {
      flex: 1;
    }

    @media (max-width: 640px) {
      .checkbox-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .favorite-item {
        font-size: 0.8rem;
      }

      .favorite-label {
        min-width: 50px;
      }
    }
  </style>

  <script>
    import type { AlarmPattern } from '../types';
    import { NOTIFICATION_INTERVALS, WEEKDAYS } from '../types';

    let editingId: string | null = null;

    // „ÅäÊ∞ó„Å´ÂÖ•„Çä„É™„Çπ„Éà„ÅÆË°®Á§∫
    function displayFavorites() {
      const listEl = document.getElementById('favorites-list');
      if (!listEl) return;

      const stored = localStorage.getItem('alarmPatterns');
      const patterns: AlarmPattern[] = stored ? JSON.parse(stored) : [];

      if (patterns.length === 0) {
        listEl.innerHTML = '<p class="empty-message">ÁôªÈå≤„Åï„Çå„Åü„Éë„Çø„Éº„É≥„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</p>';
        return;
      }

      listEl.innerHTML = patterns.map(pattern => {
        const wakeDisplay = pattern.wakeUpTime || 'OFF';
        const repeatDisplay = pattern.repeatDays.length > 0 
          ? `<div style="font-size: 0.7rem; color: #94a3b8; margin-top: 2px;">üîÅ ${pattern.repeatDays.map(d => WEEKDAYS[d]).join(',')}</div>`
          : '';
        return `
        <div class="favorite-item">
          <label class="toggle-switch">
            <input type="checkbox" ${pattern.isActive ? 'checked' : ''} data-id="${pattern.id}" class="toggle-active">
            <span class="toggle-slider"></span>
          </label>
          <div style="flex: 1; min-width: 60px;">
            <div class="favorite-label">${pattern.label}</div>
            ${repeatDisplay}
          </div>
          <span class="favorite-time">üåÖ${wakeDisplay}</span>
          <span class="favorite-time">üö∂${pattern.departureTime}</span>
          <button class="icon-btn edit" data-id="${pattern.id}" title="Á∑®ÈõÜ">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
          </button>
          <button class="icon-btn delete" data-id="${pattern.id}" title="ÂâäÈô§">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
          </button>
        </div>
      `}).join('');

      // „Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÇíËøΩÂä†
      document.querySelectorAll('.toggle-active').forEach(toggle => {
        toggle.addEventListener('change', handleToggle);
      });

      document.querySelectorAll('.edit').forEach(btn => {
        btn.addEventListener('click', handleEdit);
      });

      document.querySelectorAll('.delete').forEach(btn => {
        btn.addEventListener('click', handleDelete);
      });
    }

    // „Ç¢„ÇØ„ÉÜ„Ç£„ÉñÂàá„ÇäÊõø„Åà
    function handleToggle(e: Event) {
      const target = e.target as HTMLInputElement;
      const id = target.dataset.id;
      if (!id) return;

      const stored = localStorage.getItem('alarmPatterns');
      const patterns: AlarmPattern[] = stored ? JSON.parse(stored) : [];

      const updatedPatterns = patterns.map(p => ({
        ...p,
        isActive: p.id === id ? target.checked : false
      }));

      localStorage.setItem('alarmPatterns', JSON.stringify(updatedPatterns));
      displayFavorites();

      sessionStorage.clear();
    }

    // Á∑®ÈõÜ
    function handleEdit(e: Event) {
      const btn = e.currentTarget as HTMLButtonElement;
      const id = btn.dataset.id;
      if (!id) return;

      const stored = localStorage.getItem('alarmPatterns');
      const patterns: AlarmPattern[] = stored ? JSON.parse(stored) : [];
      const pattern = patterns.find(p => p.id === id);

      if (!pattern) return;

      editingId = id;
      (document.getElementById('modal-title') as HTMLHeadingElement).textContent = '„Ç¢„É©„Éº„É†Á∑®ÈõÜ';
      (document.getElementById('edit-id') as HTMLInputElement).value = id;
      (document.getElementById('label') as HTMLInputElement).value = pattern.label;
      
      const wakeTimeInput = document.getElementById('wake-time') as HTMLInputElement;
      const wakeTimeOff = document.getElementById('wake-time-off') as HTMLInputElement;
      
      if (pattern.wakeUpTime) {
        wakeTimeInput.value = pattern.wakeUpTime;
        wakeTimeInput.disabled = false;
        wakeTimeOff.checked = false;
      } else {
        wakeTimeInput.value = '';
        wakeTimeInput.disabled = true;
        wakeTimeOff.checked = true;
      }
      
      (document.getElementById('departure-time') as HTMLInputElement).value = pattern.departureTime;

      // ÈÄöÁü•ÈñìÈöî„ÅÆÂæ©ÂÖÉ
      NOTIFICATION_INTERVALS.forEach(interval => {
        const checkbox = document.querySelector(`input[value="${interval}"]`) as HTMLInputElement;
        if (checkbox) {
          checkbox.checked = pattern.notificationIntervals.includes(interval);
        }
      });

      // Áπ∞„ÇäËøî„ÅóÊõúÊó•„ÅÆÂæ©ÂÖÉ
      document.querySelectorAll('.weekday-btn').forEach((btn, index) => {
        if (pattern.repeatDays.includes(index)) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });

      showModal();
    }

    // ÂâäÈô§
    function handleDelete(e: Event) {
      const btn = e.currentTarget as HTMLButtonElement;
      const id = btn.dataset.id;
      if (!id) return;

      if (!confirm('„Åì„ÅÆ„Ç¢„É©„Éº„É†„ÇíÂâäÈô§„Åó„Åæ„Åô„Åã?')) return;

      const stored = localStorage.getItem('alarmPatterns');
      const patterns: AlarmPattern[] = stored ? JSON.parse(stored) : [];
      const filtered = patterns.filter(p => p.id !== id);

      localStorage.setItem('alarmPatterns', JSON.stringify(filtered));
      displayFavorites();
    }

    // „É¢„Éº„ÉÄ„É´Ë°®Á§∫
    function showModal() {
      const modal = document.getElementById('alarm-modal');
      if (modal) modal.style.display = 'flex';
    }

    // „É¢„Éº„ÉÄ„É´ÈùûË°®Á§∫
    function hideModal() {
      const modal = document.getElementById('alarm-modal');
      if (modal) modal.style.display = 'none';
      resetForm();
    }

    // „Éï„Ç©„Éº„É†„É™„Çª„ÉÉ„Éà
    function resetForm() {
      editingId = null;
      (document.getElementById('alarm-form') as HTMLFormElement).reset();
      (document.getElementById('modal-title') as HTMLHeadingElement).textContent = 'Êñ∞Ë¶è„Ç¢„É©„Éº„É†';
      (document.getElementById('edit-id') as HTMLInputElement).value = '';
      (document.getElementById('wake-time') as HTMLInputElement).disabled = false;
      document.querySelectorAll('.weekday-btn').forEach(btn => btn.classList.remove('active'));
      const errorMsg = document.getElementById('error-message');
      if (errorMsg) errorMsg.style.display = 'none';
    }

    // „Éï„Ç©„Éº„É†ÂàùÊúüÂåñ
    function initForm() {
      // ÈÄöÁü•ÈñìÈöî„ÉÅ„Çß„ÉÉ„ÇØ„Éú„ÉÉ„ÇØ„Çπ
      const intervalsGrid = document.getElementById('intervals-grid');
      if (intervalsGrid) {
        intervalsGrid.innerHTML = NOTIFICATION_INTERVALS.map(interval => `
          <label class="checkbox-item">
            <input type="checkbox" value="${interval}" ${[30, 10, 5, 1].includes(interval) ? 'checked' : ''}>
            <span>${interval}ÂàÜÂâç</span>
          </label>
        `).join('');
      }

      // ÊõúÊó•„Éú„Çø„É≥
      const weekdayButtons = document.getElementById('weekday-buttons');
      if (weekdayButtons) {
        weekdayButtons.innerHTML = WEEKDAYS.map((day, index) => `
          <button type="button" class="weekday-btn" data-day="${index}">${day}</button>
        `).join('');

        weekdayButtons.querySelectorAll('.weekday-btn').forEach(btn => {
          btn.addEventListener('click', (e) => {
            e.preventDefault();
            btn.classList.toggle('active');
          });
        });
      }

      // „ÇÅ„Åñ„Åæ„ÅóOFF„ÉÅ„Çß„ÉÉ„ÇØ„Éú„ÉÉ„ÇØ„Çπ
      const wakeTimeOff = document.getElementById('wake-time-off') as HTMLInputElement;
      const wakeTimeInput = document.getElementById('wake-time') as HTMLInputElement;
      
      wakeTimeOff?.addEventListener('change', () => {
        wakeTimeInput.disabled = wakeTimeOff.checked;
        if (wakeTimeOff.checked) {
          wakeTimeInput.value = '';
        }
      });
    }

    // „Éï„Ç©„Éº„É†ÈÄÅ‰ø°
    function handleSubmit(e: Event) {
      e.preventDefault();

      const label = (document.getElementById('label') as HTMLInputElement).value;
      const wakeTimeOff = (document.getElementById('wake-time-off') as HTMLInputElement).checked;
      const wakeTimeInput = document.getElementById('wake-time') as HTMLInputElement;
      const wakeTime = wakeTimeOff ? '' : wakeTimeInput.value;
      const departureTime = (document.getElementById('departure-time') as HTMLInputElement).value;

      // „Éê„É™„Éá„Éº„Ç∑„Éß„É≥
      if (wakeTime && wakeTime >= departureTime) {
        const errorMsg = document.getElementById('error-message');
        if (errorMsg) {
          errorMsg.textContent = '„ÇÅ„Åñ„Åæ„ÅóÊôÇÂàª„ÅØ„Åä„Åß„Åã„ÅëÊôÇÂàª„Çà„ÇäÂâç„Å´Ë®≠ÂÆö„Åó„Å¶„Åè„Å†„Åï„ÅÑ';
          errorMsg.style.display = 'block';
        }
        return;
      }

      // ÈÄöÁü•ÈñìÈöî„ÅÆÂèñÂæó
      const intervals: number[] = [];
      document.querySelectorAll('#intervals-grid input[type="checkbox"]:checked').forEach(input => {
        intervals.push(parseInt((input as HTMLInputElement).value));
      });

      // Áπ∞„ÇäËøî„ÅóÊõúÊó•„ÅÆÂèñÂæó
      const repeatDays: number[] = [];
      document.querySelectorAll('.weekday-btn.active').forEach(btn => {
        const dayValue = (btn as HTMLButtonElement).dataset.day;
        if (dayValue) {
          repeatDays.push(parseInt(dayValue));
        }
      });

      // repeatDays„Çí„ÇΩ„Éº„Éà
      repeatDays.sort((a, b) => a - b);

      const stored = localStorage.getItem('alarmPatterns');
      const patterns: AlarmPattern[] = stored ? JSON.parse(stored) : [];

      if (editingId) {
        // Á∑®ÈõÜ
        const index = patterns.findIndex(p => p.id === editingId);
        if (index !== -1) {
          patterns[index] = {
            ...patterns[index],
            label,
            wakeUpTime: wakeTime,
            departureTime: departureTime,
            notificationIntervals: intervals,
            repeatDays,
            updatedAt: new Date().toISOString()
          };
        }
      } else {
        // Êñ∞Ë¶è‰ΩúÊàê
        const newPattern: AlarmPattern = {
          id: Date.now().toString(),
          label,
          wakeUpTime: wakeTime,
          departureTime: departureTime,
          notificationIntervals: intervals,
          repeatDays,
          isActive: patterns.length === 0,
          createdAt: new Date().toISOString(),
          updatedAt: new Date().toISOString()
        };
        patterns.push(newPattern);
      }

      localStorage.setItem('alarmPatterns', JSON.stringify(patterns));
      hideModal();
      displayFavorites();
    }

    // „Ç§„Éô„É≥„Éà„É™„Çπ„Éä„ÉºË®≠ÂÆö
    document.getElementById('new-alarm-btn')?.addEventListener('click', () => {
      resetForm();
      showModal();
    });

    document.getElementById('close-modal')?.addEventListener('click', hideModal);
    document.getElementById('cancel-btn')?.addEventListener('click', hideModal);
    document.getElementById('alarm-form')?.addEventListener('submit', handleSubmit);

    // „É¢„Éº„ÉÄ„É´Â§ñ„ÇØ„É™„ÉÉ„ÇØ„ÅßÈñâ„Åò„Çã
    document.getElementById('alarm-modal')?.addEventListener('click', (e) => {
      if (e.target === e.currentTarget) {
        hideModal();
      }
    });

    // ÂàùÊúüÂåñ
    initForm();
    displayFavorites();
  </script>
</Layout>

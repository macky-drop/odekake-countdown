---
// src/pages/countdown.astro
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="カウントダウン">
  <div class="countdown-container">
    <header class="countdown-header">
      <h2>渋谷駅</h2>
      <p>10:00 到着予定</p>
    </header>

    <div class="countdown-display">
      <div class="time-label">出発まで</div>
      <div class="time-value" id="timeDisplay">
        <span class="hours">00</span>
        <span class="separator">:</span>
        <span class="minutes">45</span>
        <span class="separator">:</span>
        <span class="seconds">30</span>
      </div>
      <div class="departure-time">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        <span id="departureTime">09:15</span> 出発
      </div>
    </div>

    <div class="route-summary">
      <div class="summary-row">
        <span class="label">経路</span>
        <span class="value">JR東海道線 → JR山手線</span>
      </div>
      <div class="summary-row">
        <span class="label">所要時間</span>
        <span class="value">45分</span>
      </div>
      <div class="summary-row">
        <span class="label">料金</span>
        <span class="value">¥320</span>
      </div>
    </div>

    <div class="actions">
      <button class="action-btn primary" id="startTimer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        タイマー開始
      </button>
      <button class="action-btn secondary" id="adjustTime">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
        時間調整
      </button>
    </div>

    <div class="notifications-panel">
      <h3>通知設定</h3>
      <div class="notification-list">
        <label class="notification-item">
          <input type="checkbox" data-minutes="30" checked />
          <span>30分前に通知</span>
        </label>
        <label class="notification-item">
          <input type="checkbox" data-minutes="10" checked />
          <span>10分前に通知</span>
        </label>
        <label class="notification-item">
          <input type="checkbox" data-minutes="5" checked />
          <span>5分前に通知</span>
        </label>
        <label class="notification-item">
          <input type="checkbox" data-minutes="1" />
          <span>1分前に通知</span>
        </label>
      </div>
    </div>
  </div>

  <Navigation />
</Layout>

<style>
  .countdown-container {
    min-height: 100vh;
    background: linear-gradient(180deg, var(--primary) 0%, var(--background) 300px);
    padding: 20px;
    padding-bottom: 100px;
  }

  .countdown-header {
    text-align: center;
    color: white;
    margin-bottom: 32px;
  }

  .countdown-header h2 {
    font-size: 28px;
    margin-bottom: 8px;
  }

  .countdown-header p {
    font-size: 16px;
    opacity: 0.9;
  }

  .countdown-display {
    background: var(--surface);
    border-radius: 24px;
    padding: 32px;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    margin-bottom: 24px;
  }

  .time-label {
    font-size: 16px;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  .time-value {
    font-size: 64px;
    font-weight: 700;
    color: var(--primary);
    font-variant-numeric: tabular-nums;
    margin-bottom: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .separator {
    margin: 0 4px;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0.3; }
  }

  .departure-time {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 18px;
    color: var(--text-secondary);
    font-weight: 600;
  }

  .departure-time svg {
    color: var(--primary);
  }

  #departureTime {
    color: var(--primary);
    font-weight: 700;
  }

  .route-summary {
    background: var(--surface);
    border-radius: 16px;
    padding: 20px;
    margin-bottom: 24px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid var(--border);
  }

  .summary-row:last-child {
    border-bottom: none;
  }

  .summary-row .label {
    color: var(--text-secondary);
    font-size: 14px;
  }

  .summary-row .value {
    font-weight: 600;
    font-size: 16px;
  }

  .actions {
    display: flex;
    gap: 12px;
    margin-bottom: 24px;
  }

  .action-btn {
    flex: 1;
    padding: 16px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s;
  }

  .action-btn.primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
  }

  .action-btn.primary:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(76, 175, 80, 0.4);
  }

  .action-btn.secondary {
    background: var(--surface);
    color: var(--text-primary);
    border: 2px solid var(--border);
  }

  .action-btn.secondary:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .notifications-panel {
    background: var(--surface);
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .notifications-panel h3 {
    font-size: 18px;
    margin-bottom: 16px;
  }

  .notification-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .notification-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: var(--background);
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .notification-item:hover {
    background: var(--border);
  }

  .notification-item input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
  }

  @media (max-width: 480px) {
    .time-value {
      font-size: 48px;
    }

    .actions {
      flex-direction: column;
    }
  }
</style>

<script>
  let timerInterval: number | null = null;
  let isRunning = false;

  function updateDisplay(hours: number, minutes: number, seconds: number) {
    const hoursEl = document.querySelector('.hours');
    const minutesEl = document.querySelector('.minutes');
    const secondsEl = document.querySelector('.seconds');

    if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
    if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
    if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
  }

  function startTimer() {
    if (isRunning) {
      // 停止
      if (timerInterval) clearInterval(timerInterval);
      isRunning = false;
      const btn = document.getElementById('startTimer');
      if (btn) {
        btn.innerHTML = `
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          タイマー開始
        `;
      }
      return;
    }

    // 開始
    isRunning = true;
    const btn = document.getElementById('startTimer');
    if (btn) {
      btn.innerHTML = `
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="6" y="4" width="4" height="16"></rect>
          <rect x="14" y="4" width="4" height="16"></rect>
        </svg>
        一時停止
      `;
    }

    let totalSeconds = 45 * 60 + 30; // 45分30秒

    timerInterval = setInterval(() => {
      if (totalSeconds <= 0) {
        if (timerInterval) clearInterval(timerInterval);
        // アラーム再生
        alert('出発時間です!');
        return;
      }

      totalSeconds--;
      const hours = Math.floor(totalSeconds / 3600);
      const minutes = Math.floor((totalSeconds % 3600) / 60);
      const seconds = totalSeconds % 60;

      updateDisplay(hours, minutes, seconds);

      // 通知チェック
      const notifications = document.querySelectorAll<HTMLInputElement>('.notification-item input:checked');
      notifications.forEach(checkbox => {
        const notifyMinutes = parseInt(checkbox.dataset.minutes || '0');
        if (totalSeconds === notifyMinutes * 60) {
          new Notification(`出発${notifyMinutes}分前です`);
        }
      });
    }, 1000);
  }

  document.getElementById('startTimer')?.addEventListener('click', startTimer);

  document.getElementById('adjustTime')?.addEventListener('click', () => {
    alert('時間調整機能（チャットで調整可能）');
  });

  // 通知権限リクエスト
  if ('Notification' in window && Notification.permission === 'default') {
    Notification.requestPermission();
  }
</script>
</Layout>

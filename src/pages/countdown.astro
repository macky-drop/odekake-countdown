---
// src/pages/countdown.astro
const title = "カウントダウン";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #4CAF50;
        --primary-dark: #388E3C;
        --background: #F5F5F5;
        --surface: #FFFFFF;
        --text-primary: #212121;
        --text-secondary: #757575;
        --border: #E0E0E0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--background);
        color: var(--text-primary);
        line-height: 1.6;
      }

      .countdown-container {
        min-height: 100vh;
        background: linear-gradient(180deg, var(--primary) 0%, var(--background) 300px);
        padding: 20px;
        padding-bottom: 100px;
        max-width: 600px;
        margin: 0 auto;
      }

      .countdown-header {
        text-align: center;
        color: white;
        margin-bottom: 32px;
      }

      .countdown-header h2 {
        font-size: 28px;
        margin-bottom: 8px;
      }

      .countdown-display {
        background: var(--surface);
        border-radius: 24px;
        padding: 32px;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        margin-bottom: 24px;
      }

      .time-label {
        font-size: 16px;
        color: var(--text-secondary);
        margin-bottom: 16px;
      }

      .time-value {
        font-size: 64px;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 16px;
        display: flex;
        justify-content: center;
      }

      .separator {
        margin: 0 4px;
        animation: blink 1s infinite;
      }

      @keyframes blink {
        0%, 49% { opacity: 1; }
        50%, 100% { opacity: 0.3; }
      }

      .departure-time {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 18px;
        font-weight: 600;
      }

      .route-summary {
        background: var(--surface);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid var(--border);
      }

      .summary-row:last-child {
        border-bottom: none;
      }

      .actions {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
      }

      .action-btn {
        flex: 1;
        padding: 16px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
      }

      .action-btn.primary {
        background: var(--primary);
        color: white;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
      }

      .action-btn.secondary {
        background: var(--surface);
        border: 2px solid var(--border);
      }

      .notifications-panel {
        background: var(--surface);
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .notification-item {
        display: flex;
        gap: 12px;
        padding: 12px;
        background: var(--background);
        border-radius: 8px;
        margin-bottom: 8px;
      }

      .bottom-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: var(--surface);
        border-top: 1px solid var(--border);
        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        max-width: 600px;
        margin: 0 auto;
        z-index: 100;
      }

      .nav-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        padding: 8px 16px;
        color: var(--text-secondary);
        text-decoration: none;
      }

      .nav-item.active {
        color: var(--primary);
      }

      .nav-item span {
        font-size: 12px;
      }
    </style>
  </head>
  <body>
    <div class="countdown-container">
      <header class="countdown-header">
        <h2>渋谷駅</h2>
        <p>10:00 到着予定</p>
      </header>

      <div class="countdown-display">
        <div class="time-label">出発まで</div>
        <div class="time-value">
          <span class="hours">00</span>
          <span class="separator">:</span>
          <span class="minutes">45</span>
          <span class="separator">:</span>
          <span class="seconds">30</span>
        </div>
        <div class="departure-time">
          <span style="color: var(--primary)">09:15</span> 出発
        </div>
      </div>

      <div class="route-summary">
        <div class="summary-row">
          <span>経路</span>
          <span style="font-weight: 600">JR東海道線 → JR山手線</span>
        </div>
        <div class="summary-row">
          <span>所要時間</span>
          <span style="font-weight: 600">45分</span>
        </div>
        <div class="summary-row">
          <span>料金</span>
          <span style="font-weight: 600">¥320</span>
        </div>
      </div>

      <div class="actions">
        <button class="action-btn primary" id="startTimer">⏱️ タイマー開始</button>
        <button class="action-btn secondary">✏️ 時間調整</button>
      </div>

      <div class="notifications-panel">
        <h3 style="margin-bottom: 16px">通知設定</h3>
        <label class="notification-item">
          <input type="checkbox" data-minutes="30" checked />
          <span>30分前に通知</span>
        </label>
        <label class="notification-item">
          <input type="checkbox" data-minutes="10" checked />
          <span>10分前に通知</span>
        </label>
        <label class="notification-item">
          <input type="checkbox" data-minutes="5" checked />
          <span>5分前に通知</span>
        </label>
      </div>
    </div>

    <nav class="bottom-nav">
      <a href="/" class="nav-item">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <span>チャット</span>
      </a>
      <a href="/routes" class="nav-item">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        </svg>
        <span>ルート</span>
      </a>
      <a href="/countdown" class="nav-item active">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        <span>カウントダウン</span>
      </a>
      <a href="/settings" class="nav-item">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="3"></circle>
          <path d="M12 1v6m0 6v6"></path>
        </svg>
        <span>設定</span>
      </a>
    </nav>

    <script>
      let timerInterval = null;
      let isRunning = false;

      document.getElementById('startTimer')?.addEventListener('click', function() {
        if (isRunning) {
          clearInterval(timerInterval);
          isRunning = false;
          this.textContent = '⏱️ タイマー開始';
        } else {
          isRunning = true;
          this.textContent = '⏸️ 一時停止';
          
          let totalSeconds = 45 * 60 + 30;
          timerInterval = setInterval(() => {
            if (totalSeconds <= 0) {
              clearInterval(timerInterval);
              alert('出発時間です！');
              return;
            }
            totalSeconds--;
            const h = Math.floor(totalSeconds / 3600);
            const m = Math.floor((totalSeconds % 3600) / 60);
            const s = totalSeconds % 60;
            document.querySelector('.hours').textContent = String(h).padStart(2, '0');
            document.querySelector('.minutes').textContent = String(m).padStart(2, '0');
            document.querySelector('.seconds').textContent = String(s).padStart(2, '0');
          }, 1000);
        }
      });
    </script>
  </body>
</html>
    <script>
      let currentTimeType = 'departure';
      let allRoutes = {};
      let currentUserLocation = null;

      // åˆæœŸæ™‚åˆ»è¨­å®š
      const now = new Date();
      now.setMinutes(now.getMinutes() + 30);
      document.getElementById('timeInput').value = now.toISOString().slice(0, 16);

      // æ™‚åˆ»ã‚¿ã‚¤ãƒ—åˆ‡ã‚Šæ›¿ãˆ
      document.querySelectorAll('.time-type-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          document.querySelectorAll('.time-type-btn').forEach(b => b.classList.remove('active'));
          e.currentTarget.classList.add('active');
          currentTimeType = e.currentTarget.dataset.type;
        });
      });

      // GPSå–å¾—
      document.getElementById('gpsBtn').addEventListener('click', async () => {
        const btn = document.getElementById('gpsBtn');
        btn.disabled = true;
        
        if (!navigator.geolocation) {
          alert('ãŠä½¿ã„ã®ãƒ–ãƒ©ã‚¦ã‚¶ã¯ä½ç½®æƒ…å ±ã«å¯¾å¿œã—ã¦ã„ã¾ã›ã‚“');
          btn.disabled = false;
          return;
        }

        try {
          const position = await new Promise((resolve, reject) => {
            navigator.geolocation.getCurrentPosition(resolve, reject);
          });

          currentUserLocation = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };

          document.getElementById('originInput').value = 'ç¾åœ¨åœ°';
          alert('ç¾åœ¨åœ°ã‚’å–å¾—ã—ã¾ã—ãŸ');
        } catch (error) {
          alert('ä½ç½®æƒ…å ±ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ: ' + error.message);
        } finally {
          btn.disabled = false;
        }
      });

      // ãƒ«ãƒ¼ãƒˆæ¤œç´¢
      document.getElementById('searchForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        await searchRoutes('all');
      });

      async function searchRoutes(priority) {
        const originInput = document.getElementById('originInput').value;
        const destination = document.getElementById('destinationInput').value;
        const timeValue = document.getElementById('timeInput').value;

        if (!originInput || !destination || !timeValue) {
          alert('ã™ã¹ã¦ã®é …ç›®ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
          return;
        }

        // å‡ºç™ºåœ°ã®å‡¦ç†(ç¾åœ¨åœ°ã®å ´åˆã¯åº§æ¨™ã‚’ä½¿ç”¨)
        const origin = originInput === 'ç¾åœ¨åœ°' && currentUserLocation
          ? `${currentUserLocation.lat},${currentUserLocation.lng}`
          : originInput;

        const searchBtn = document.getElementById('searchBtn');
        const routesList = document.getElementById('routesList');
        const filters = document.getElementById('filters');

        searchBtn.disabled = true;
        searchBtn.textContent = 'æ¤œç´¢ä¸­...';
        routesList.innerHTML = '<div class="loading">ğŸ” ãƒ«ãƒ¼ãƒˆã‚’æ¤œç´¢ã—ã¦ã„ã¾ã™...</div>';

        try {
          // ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚­ãƒ¼ã®ç”Ÿæˆ
          const cacheKey = `routes_${origin}_${destination}_${timeValue}_${priority}`;
          const cached = localStorage.getItem(cacheKey);
          
          if (cached) {
            const data = JSON.parse(cached);
            displayRoutes(data.routes, priority);
            filters.style.display = 'flex';
            return;
          }

          // å„ªå…ˆé †ä½ã”ã¨ã«æ¤œç´¢
          const priorities = priority === 'all' 
            ? ['fastest', 'cheapest', 'fewest_transfers']
            : [priority];

          for (const p of priorities) {
            const response = await fetch('/api/search-routes', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                origin,
                destination,
                [currentTimeType === 'arrival' ? 'arrivalTime' : 'departureTime']: timeValue,
                priority: p
              })
            });

            if (!response.ok) {
              throw new Error('æ¤œç´¢ã«å¤±æ•—ã—ã¾ã—ãŸ');
            }

            const data = await response.json();
            allRoutes[p] = data.routes;

            // ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã«ä¿å­˜(30åˆ†)
            const cacheData = {
              routes: data.routes,
              timestamp: Date.now(),
              expiresIn: 30 * 60 * 1000
            };
            localStorage.setItem(`routes_${origin}_${destination}_${timeValue}_${p}`, JSON.stringify(cacheData));
          }

          displayRoutes(allRoutes[priorities[0]], priority);
          filters.style.display = 'flex';

        } catch (error) {
          console.error('Search error:', error);
          routesList.innerHTML = `
            <div class="error-message">
              âŒ ${error.message}
              <br>ã‚‚ã†ä¸€åº¦ãŠè©¦ã—ãã ã•ã„ã€‚
            </div>
          `;
        } finally {
          searchBtn.disabled = false;
          searchBtn.textContent = 'ğŸ” ãƒ«ãƒ¼ãƒˆã‚’æ¤œç´¢';
        }
      }

      function displayRoutes(routes, priority) {
        const routesList = document.getElementById('routesList');
        
        if (!routes || routes.length === 0) {
          routesList.innerHTML = '<div class="empty-state"><div class="empty-state-icon">ğŸ˜”</div><p>ãƒ«ãƒ¼ãƒˆãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã§ã—ãŸ</p></div>';
          return;
        }

        const priorityLabels = {
          fastest: { text: 'æœ€é€Ÿ', color: '#4CAF50' },
          cheapest: { text: 'æœ€å®‰', color: '#2196F3' },
          fewest_transfers: { text: 'ä¹—æ›å°‘', color: '#FF9800' }
        };

        routesList.innerHTML = routes.map((route, index) => {
          const badge = priorityLabels[priority] || priorityLabels.fastest;
          
          return `
            <div class="route-card">
              <div class="route-header">
                <span class="priority-badge" style="background-color: ${badge.color}">${badge.text}</span>
                <div class="route-info">
                  <span class="duration">${route.durationText}</span>
                  <span>${route.fare ? route.fare.text : 'æ–™é‡‘ä¸æ˜'}</span>
                  <span>ä¹—æ›${route.transfers}å›</span>
                </div>
              </div>

              <div class="route-segments">
                ${route.segments.map(segment => {
                  if (segment.type === 'walk') {
                    return `
                      <div class="segment">
                        <div class="segment-walk">
                          <span>ğŸš¶</span>
                          <span>${segment.durationText}</span>
                          <span style="font-size: 12px">${segment.instructions}</span>
                        </div>
                      </div>
                    `;
                  } else if (segment.type === 'transit') {
                    const vehicleIcon = segment.line.vehicle === 'BUS' ? 'ğŸšŒ' : 'ğŸšƒ';
                    return `
                      <div class="segment">
                        <div class="segment-transit">
                          <div class="transit-line">
                            <div class="line-icon" style="background-color: ${segment.line.color}; color: ${segment.line.textColor}">
                              ${vehicleIcon}
                            </div>
                            <div class="line-info">
                              <div class="line-name">${segment.line.name}</div>
                              <div class="stations">${segment.departure.name} â†’ ${segment.arrival.name}</div>
                            </div>
                          </div>
                          <div class="transit-time">
                            <span class="time">${segment.departure.time}</span>
                            <span>â†’</span>
                            <span class="time">${segment.arrival.time}</span>
                            <span style="font-size: 12px">(${segment.durationText})</span>
                          </div>
                        </div>
                      </div>
                    `;
                  }
                  return '';
                }).join('')}
              </div>

              <button class="select-btn" onclick="selectRoute('${route.id}')">
                ã“ã®ãƒ«ãƒ¼ãƒˆã‚’é¸æŠ
              </button>
            </div>
          `;
        }).join('');
      }

      // ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼åˆ‡ã‚Šæ›¿ãˆ
      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
          e.currentTarget.classList.add('active');
          const priority = e.currentTarget.dataset.priority;
          
          if (priority === 'all') {
            searchRoutes('fastest');
          } else {
            displayRoutes(allRoutes[priority] || [], priority);
          }
        });
      });

      function selectRoute(routeId) {
        localStorage.setItem('selectedRoute', routeId);
        window.location.href = '/countdown';
      }

      // ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—(èµ·å‹•æ™‚)
      function cleanupCache() {
        const keys = Object.keys(localStorage);
        const now = Date.now();
        keys.forEach(key => {
          if (key.startsWith('routes_')) {
            try {
              const data = JSON.parse(localStorage.getItem(key));
              if (data.timestamp + data.expiresIn < now) {
                localStorage.removeItem(key);
              }
            } catch (e) {}
          }
        });
      }

      cleanupCache();
    </script>

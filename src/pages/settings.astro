      .app-name {
        font-weight: 600;
        font-size: 18px;
        margin-bottom: 4px;
      }

      .app-version {
        font-size: 14px;
        color: var(--text-secondary);
      }

      .info-links {
        display: flex;
        flex-direction: column;
        padding: 12px;
      }

      .info-link {
        padding: 12px;
        color: var(--text-primary);
        font-size: 15px;
        transition: color 0.2s;
        text-decoration: none;
      }

      .info-link:hover {
        color: var(--primary);
      }

      /* ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³ */
      .bottom-nav {

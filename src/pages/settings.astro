      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #4CAF50;
        --primary-dark: #388E3C;
        --secondary: #2196F3;
        --background: #F5F5F5;
        --surface: #FFFFFF;
        --text-primary: #212121;
        --text-secondary: #757575;
        --border: #E0E0E0;
        --error: #F44336;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--background);
        color: var(--text-primary);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
      }

      .settings-container {
        min-height: 100vh;
        background: var(--background);
        max-width: 600px;
        margin: 0 auto;
      }

      .settings-header {
        background: var(--surface);
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        z-index: 10;
      }

      .settings-header h1 {
        font-size: 24px;
        text-align: center;
      }

      .container {
        padding: 0 16px 100px;
      }

      .settings-section {
        margin: 24px 0;
      }

      .section-title {
        font-size: 18px;
        margin-bottom: 12px;
        padding: 0 4px;
      }

      .card {
        background: var(--surface);
        border-radius: 12px;
        padding: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .favorite-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 16px;
      }

      .favorite-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px;
        background: var(--background);
        border-radius: 8px;
      }

      .favorite-info {
        flex: 1;
      }

      .favorite-name {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 2px;
      }

      .favorite-detail {
        font-size: 13px;
        color: var(--text-secondary);
      }

      .icon-btn {
        padding: 8px;
        color: var(--text-secondary);
        transition: color 0.2s;
        background: none;
        border: none;
        cursor: pointer;
      }

      .icon-btn:hover {
        color: var(--error);
      }

      .alarm-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 12px;
        border-bottom: 1px solid var(--border);
      }

      .alarm-item:last-of-type {
        border-bottom: none;
      }

      .alarm-info {
        flex: 1;
      }

      .alarm-time {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 4px;
      }

      .alarm-days {
        font-size: 14px;
        color: var(--text-secondary);
        margin-bottom: 2px;
      }

      .alarm-label {
        font-size: 13px;
        color: var(--primary);
        font-weight: 500;
      }

      .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 28px;
      }

      .switch input {
        opacity: 0;
        width: 0;
        height: 0;
      }

      .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: var(--border);
        transition: 0.3s;
        border-radius: 28px;
      }

      .slider:before {
        position: absolute;
        content: "";
        height: 20px;
        width: 20px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: 0.3s;
        border-radius: 50%;
      }

      input:checked + .slider {
        background-color: var(--primary);
      }

      input:checked + .slider:before {
        transform: translateX(22px);
      }

      .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 12px;
        border-bottom: 1px solid var(--border);
      }

      .setting-item:last-child {
        border-bottom: none;
      }

      .setting-info {
        flex: 1;
      }

      .setting-name {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 2px;
      }

      .setting-detail {
        font-size: 13px;
        color: var(--text-secondary);
      }

      .select-field {
        padding: 8px 12px;
        border: 2px solid var(--border);
        border-radius: 8px;
        background: var(--surface);
        font-size: 14px;
        cursor: pointer;
        font-family: inherit;
      }

      .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        cursor: pointer;
        font-family: inherit;
        font-size: 14px;
      }

      .btn-outline {
        border: 2px solid var(--border);
        color: var(--text-primary);
        background: var(--surface);
      }

      .btn-outline:hover {
        background-color: var(--background);
      }

      .full-width {
        width: 100%;
        margin-top: 8px;
      }

      .app-info {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 12px;
        border-bottom: 1px solid var(--border);
      }

      .app-icon {
        font-size: 48px;
      }

      .app-details {

<style>
  .settings-container {
    min-height: 100vh;
    background: var(--background);
  }

  .settings-header {
    background: var(--surface);
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 10;
  }


    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .icon-btn:hover {
    color: var(--error);
  }

  .alarm-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 12px;
    border-bottom: 1px solid var(--border);
  }

  .alarm-item:last-of-type {
    border-bottom: none;
  }

  .alarm-info {
    flex: 1;
  }

  .alarm-time {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 4px;
  }

  .alarm-days {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 2px;
  }

  .alarm-label {
    font-size: 13px;
    color: var(--primary);
    font-weight: 500;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 28px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--border);
    transition: 0.3s;
    border-radius: 28px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.3s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: var(--primary);
  }

  input:checked + .slider:before {
    transform: translateX(22px);
  }

  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 12px;
    border-bottom: 1px solid var(--border);
  }

  .setting-item:last-child {
    border-bottom: none;
  }

  .setting-info {
    flex: 1;
  }

  .setting-name {
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 2px;
  }

  .setting-detail {
    font-size: 13px;
    color: var(--text-secondary);
  }

  .select-field {
    padding: 8px 12px;
    border: 2px solid var(--border);
    border-radius: 8px;
    background: var(--surface);
    font-size: 14px;
    cursor: pointer;
  }

  .full-width {
    width: 100%;
    margin-top: 8px;
  }

  .app-info {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px 12px;
    border-bottom: 1px solid var(--border);
  }

  .app-icon {

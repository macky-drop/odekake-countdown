    text-align: center;
  }

  .settings-section {
    margin: 24px 0;
  }

  .section-title {
    font-size: 18px;
    margin-bottom: 12px;
    padding: 0 4px;
  }

  .favorite-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 16px;
  }

  .favorite-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: var(--background);
    border-radius: 8px;
  }

  .favorite-info {
    flex: 1;
  }

  .favorite-name {

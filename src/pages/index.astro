        color: white;
        border-bottom-right-radius: 4px;
      }

      .input-container {
        padding: 16px;
        background: var(--surface);
        border-top: 1px solid var(--border);
        padding-bottom: 80px;
      }

      .quick-actions {
        display: flex;
        gap: 8px;
        margin-bottom: 12px;
      }

      .quick-btn {
        flex: 1;
        padding: 8px 12px;
        background: var(--background);
        border: 1px solid var(--border);
        border-radius: 8px;
        font-size: 13px;
        transition: all 0.2s;
        cursor: pointer;
      }

      .quick-btn:hover {
        background: var(--border);
      }

      .input-wrapper {
        display: flex;
        gap: 8px;
        align-items: center;
      }

      .message-input {
        flex: 1;
        padding: 12px 16px;
        border: 2px solid var(--border);
        border-radius: 24px;
        font-size: 16px;
        transition: border-color 0.2s;
        font-family: inherit;
      }

      .message-input:focus {
        outline: none;
        border-color: var(--primary);
      }

      .send-btn {
        width: 48px;
        height: 48px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        cursor: pointer;
        border: none;
      }

      .send-btn:hover {
